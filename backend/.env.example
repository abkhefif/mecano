# Database
DATABASE_URL=postgresql+asyncpg://emecano:emecano_password@localhost:5432/emecano

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET=
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
STRIPE_REFRESH_URL=https://emecano.fr/stripe/refresh
STRIPE_RETURN_URL=https://emecano.fr/stripe/return

# Cloudflare R2 / AWS S3
R2_ENDPOINT_URL=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=xxxxx
R2_SECRET_ACCESS_KEY=xxxxx
R2_BUCKET_NAME=emecano-storage
R2_PUBLIC_URL=https://storage.emecano.fr

# App
APP_ENV=development
APP_DEBUG=true
CORS_ORIGINS=http://localhost:8081,http://localhost:3000

# Business rules
BASE_INSPECTION_PRICE=40.00
OBD_SUPPLEMENT=25.00
PLATFORM_COMMISSION_RATE=0.20
TRAVEL_FEE_PER_KM=0.30
DEFAULT_FREE_ZONE_KM=10
PAYMENT_RELEASE_DELAY_HOURS=2
MECHANIC_ACCEPTANCE_TIMEOUT_HOURS=2

# Booking constants
BOOKING_SLOT_DURATION_MINUTES=30
BOOKING_BUFFER_ZONE_MINUTES=15
BOOKING_MINIMUM_ADVANCE_HOURS=2
BOOKING_CHECK_IN_TOLERANCE_MINUTES=30
MAX_CHECK_IN_CODE_ATTEMPTS=5
CANCELLATION_FULL_REFUND_HOURS=24
CANCELLATION_PARTIAL_REFUND_HOURS=12

# Resend (email verification)
RESEND_API_KEY=re_xxxxx
FRONTEND_URL=http://localhost:8081

# Proxy (set to 1 on Render/Cloudflare, 0 for direct)
TRUSTED_PROXY_COUNT=0

# Metrics (protect /metrics endpoint)
METRICS_API_KEY=

# Sentry (error tracking)
SENTRY_DSN=
